<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:id="@+id/editText_Salario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:hint="Salário (R$)"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/TextView_Leg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salário mensal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editText_Salario"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:id="@+id/editText_Gastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:hint="Gastos (R$)"
            android:inputType="numberDecimal"

             />

        <TextView
            android:id="@+id/TextView_Leg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gastos totais com saúde e educação"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editText_Gastos"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/TextView_ImpostoLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="SEU IMPOSTO DE RENDA SERÁ:"
            android:textColor="@color/gray"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/TextView_Valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="R$ 0"
            android:textColor="@color/blue"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/green"
            android:text="CALCULAR"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>